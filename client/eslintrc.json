{
  "extends": ["airbnb", "prettier", "standard", "standard-react"],
  "plugins": ["prettier"],
  "globals": {
    "localStorage": true,
    "fetch": true
  },
  "rules": {
    "no-console": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
